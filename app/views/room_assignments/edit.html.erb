<% provide(:title, "#{@group.name} - Edit Room Assignments") %>
<h1><%= @group.name %> - Edit Room Assignments</h1>
<%= simple_form_for @room_assignment_form, url: group_room_assignment_path(@group), method: :patch do |f| %>
  <%= render 'form_fields', group: @group, f: f %>
  <%= f.submit 'Update room assignments' %>
<% end %>
<% if @group.draw %>
  <%= link_to 'Back to group', draw_group_path(@group.draw, @group) if policy(@group).show? %>
<% else %>
  <%= link_to 'Back to group', group_path(@group) if policy(@group).show? %>
<% end %>
