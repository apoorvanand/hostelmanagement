<% suites.each do |building, suites_array| %>
  <h4><em><%= building.name %></em></h4>
  <table>
    <thead>
      <tr>
        <td>Suite #</td>
        <td>S</td>
        <td>D</td>
        <td>C</td>
      </tr>
    </thead>
    <tbody>
      <% suites_array.each do |suite| %>
        <tr>
          <td><%= link_to suite.number, suite_path(suite) %></td>
          <td><%= suite.singles.count %></td>
          <td><%= suite.doubles.count %></td>
          <td><%= suite.common_rooms.count %></td>
          <td><% if policy(Like.new(user:current_user, favorite: Favorite.new(group: current_user.group, suite: suite))).new? %>
            <%= render 'likes/hidden_form', user: current_user, suite: suite, btn_str:'Like Suite' %>
          <%end%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
