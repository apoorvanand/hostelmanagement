<% suites.each do |building, suites_array| %>
  <h4><em><%= building.name %></em></h4>
  <table>
    <thead>
      <tr>
        <td>Suite #</td>
        <td>S</td>
        <td>D</td>
        <td>C</td>
      </tr>
    </thead>
    <tbody>
      <% suites_array.each do |suite| %>
        <tr>
          <td><%= link_to suite.number, suite_path(suite) %></td>
          <td><%= suite.singles.count %></td>
          <td><%= suite.doubles.count %></td>
          <td><%= suite.common_rooms.count %></td>
          <td><% if policy(Like).new? %>
            <%= link_to "Like Suite", new_draw_group_like_path(current_user.draw, current_user.group), draw_id: current_user.draw.id, group_id: current_user.group.id, method: :put, remote: true %>
          <%end%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
