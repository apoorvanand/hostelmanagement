<% if groups.empty? %>
  <p>There are no groups.</p>
<% else %>
  <% groups.keys.sort.each do |size| %>
    <h4><%= headerize_size(size) %></h4>
    <table>
      <thead>
        <tr>
          <td>Group Leader</td>
          <td>Status</td>
          <td>Lottery #</td>
          <td>Suite</td>
          <td>Rooms?</td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% sort_by_lottery(groups[size]).each do |group| %>
          <tr id="group-<%= group.id %>">
            <td data-role="group-leader"><%= group.leader.full_name %></td>
            <td data-role="group-status"><%= display_group_status(group) %></td>
            <td data-role="group-lottery"><%= group.lottery_number %></td>
            <td data-role="group-suite"><%= link_to group.suite.name, suite_path(group.suite) if group.suite %> </td>
            <td data-roloe="group-room"> <%= group.leader.room_assignment.present? ? 'Y' : 'N' %></td>
            <td class="actions" data-role="group-actions"><%= render actions_partial, group: group, path: path %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
