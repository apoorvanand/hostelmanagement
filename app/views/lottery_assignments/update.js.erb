$("#<%= lottery_form_id(@lottery) %>").html('<%= escape_javascript(render partial: 'lottery_assignments/edit_form', locals: { lottery: @lottery }) %>');
<% if @color_class %>
  $("#<%= lottery_form_id(@lottery) %>").addClass('<%= @color_class %>', 750, 'swing', function() {
    $("#<%= lottery_form_id(@lottery) %>").removeClass('<%= @color_class %>', 750, 'swing');
  });
<% end %>
