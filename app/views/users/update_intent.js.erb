$('#intent-form-<%= @user.id %>').html('<%= escape_javascript(render 'intents/intent_form', user: @user) %>');
<% if @color_class %>
  $('#intent-form-<%= @user.id %>').addClass('<%= @color_class %>', 750, 'swing', function() {
    $('#intent-form-<%= @user.id %>').removeClass('<%= @color_class %>', 750, 'swing');
  });
<% end %>
